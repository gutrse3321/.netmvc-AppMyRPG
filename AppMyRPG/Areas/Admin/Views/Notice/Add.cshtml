@model AppMyRPG.Models.Notice
@{
    ViewBag.Title = "添加公告";
    ViewBag.NavIndex = 6;
}
<div class="type-control-panel">
    <div class="type-control-well">
        @using (Html.BeginForm(FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.NoticeTitle, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.NoticeTitle, new { @class = "my-textbox type-textbox", maxlength = "20" })<br />
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NoticeContent, new { @class = "control-label" })
                @Html.TextAreaFor(m => m.NoticeContent, new { @class = "my-textbox notice-textbox" })
            </div>
            <div class="game-submit-well">
                @Html.Submit("添加", "game-submit notice-submit")
                <a href="@Url.Action("Article","Notice")" class="btnNo">取消返回</a>
            </div>
        }
    </div>
    <div class="type-control-read">
        1.公告标题简洁<br />
        2.内容说明清楚
    </div>
</div>