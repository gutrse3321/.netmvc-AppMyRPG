@model PagedList.IPagedList<AppMyRPG.Models.FriendLink>
@using PagedList.Mvc
@{
    ViewBag.Title = "友情链接列表";
    ViewBag.NavIndex = 7;
}
<div class="article-top">
    <div class="article-top-left">
        @Html.ActionLink("添加链接", "Add")
    </div>
    <div class="article-top-right">
        <div class="order-all">
            <a class="downlist-btn">
                排序
                <i class="fa fa-sort-desc"></i>
            </a>
            <div class="downlist-well">
                @Html.ActionLink("正序", "Article", new { order = 1 })
                @Html.ActionLink("倒序", "Article", new { order = 2 })
            </div>
        </div>

    </div>
</div>
<div class="article-panel">
    @foreach (var item in Model)
    {
        <div class="type-well">
            <div class="type-outin">
                @Html.Label(item.FLID.ToString())
            </div>
            <div class="usertype-name">
                @item.FLName
            </div>
            <div class="usertype-dec">
                @item.FLUrl
            </div>
            <div class="type-operate">
                <a class="game-operate" href="@Url.Action("Edit",new { flid = item.FLID})"><i class="fa fa-edit"></i>&nbsp;修改</a>
                <a class="game-operate deleteBox" onclick="return confirm('是否删除');" href="@Url.Action("Delete",new { flid=item.FLID})"><i class="fa fa-trash"></i>&nbsp;删除</a>
            </div>
        </div>
    }
</div>
<div class="myPage-well">
    @Html.PagedListPager(Model, page => Url.Action("Article", new { page }))
</div>
